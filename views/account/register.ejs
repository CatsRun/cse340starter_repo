<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<!-- all errors could be displayed https://blainerobertson.github.io/340-js/views/server-validation.html -->
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>



<div class="form">
    <form action="/account/register" method="post">
        <fieldset>
            <p>All fields are required.</p>
            <!-- <label>First Name <input type="text" name="account_firstname" required></label>    sticky form inputs   id="accountFirstname" required value="<%# locals.account_firstname %>" -->
            <label>First Name <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">                
            <label>Last Name <input type="text" name="account_lastname" id="accountLastname" required value="<%= locals.account_lastname %>"></label>
            <label>Email <input type="email" name="account_email" placeholder="yourEmail@place.com" id="accountEmail" required value="<%= locals.account_email %>"></label>
            <label>Password: <input type="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required> 
            </label>
            <!-- <label>Password: <input type="password" name="account_password" required></label> -->
            <div><i>Password must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</i></div>      
        </fieldset>
        <button type="submit">Register</button>
    </form>

<!-- add toggle button for password visual
  https://blainerobertson.github.io/340-js/views/account-registration.html -->

</div>

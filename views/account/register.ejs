<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<div class="form">
    <form action="/account/register" method="post">
        <fieldset>
            <p>All fields are required.</p>
            <label>First Name <input type="text" name="account_firstname" required></label>
            <label>Last Name <input type="text" name="account_lastname" required></label>
            <label>Email <input type="email" name="account_email" placeholder="yourEmail@place.com" pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$" required></label>
            <!-- <label>Password: <input type="password" name="account_password" pattern="[a-zA-Z0-9]{12,}" required> 
            </label> -->
            <label>Password: <input type="password" name="account_password" required></label>
            <p>Password must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</p>      
        </fieldset>
        <button type="submit">Register</button>
    </form>

<!-- add toggle button for password visual

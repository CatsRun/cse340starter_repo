<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<!-- all errors could be displayed https://blainerobertson.github.io/340-js/views/server-validation.html -->
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<div class="form">
  <form id="accountupdate" action="/account/update" method="post">
    <fieldset>
        <label for="account_firstname">First Name* </label>                
        <input type="text" name="account_firstname" id="account_firstname" required value="<%= accountData.account_firstname %>">
        <label for="account_lastname">Last Name* </label>
        <input type="text" name="account_lastname" id="account_lastname" required value="<%= accountData.account_lastname %>">
        <label for="account_email">Email* </label>
        <input type="email" name="account_email" id="account_email" required value="<%= accountData.account_email %>">

        <!-- <button type="button"  >Update Account</button> -->
        <input type="submit" name="submit" value="Update Account" > 
        <!-- add code for disabled  -->
        <input type="hidden" name="account_id"
        <% if(accountData.account_id) { %> value="<%= accountData.account_id %>"
        <% } %>>


        <%# console.log(accountData.account_id + 'does this match the update accounts?')%>

    </fieldset>
</form>
</div>

<div class="form">
    
    <form id="resetPassword" action="/account/resetpassword" method="post">
    <fieldset>

        
        <label for="account_password">New Password: </label>
        <input type="password" name="account_password" id="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        <i>This will change the current password. Password must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</i>   
        <!-- <button type="button" name="submit">Update password</button>-->
        <input type="submit" name="submit" value="Update Password" > 
        

        <input type="hidden" name="account_id"
        <% if(accountData.account_id) { %> value="<%= accountData.account_id %>"
        <% } %>>
        <%# console.log(accountData.account_id + 'does this match the reset accounts?')%>
    </fieldset>
</form>
    
</div>



<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- make message work -->
<%- messages() %>

<div class="form">
  <!-- <form method="post" action="/account/login"> -->
    <form id="loginForm" action="/account/login" method="post">
    <fieldset>
      <label>Email Address: <input type="email" name="account_email" placeholder="MyValid@email.com" required></label>
      <label>Password: <input type="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required> </label>
      <div><i>Password must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</i></div>
      <input type="submit" value="Sign In!">
    </fieldset> 
  </form>
  <p>No account? <a href="/account/register">Sign-up</a></p>
</div>

